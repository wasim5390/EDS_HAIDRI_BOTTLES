<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/promotionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/promotionNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Promo Name"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/promotionName"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/promotionSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount :"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/promotionNameText"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/promotionSizeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Promo Size"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/promotionNameText"
        app:layout_constraintLeft_toRightOf="@+id/promotionSize"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/place_autocomplete_search_hint"
        app:layout_constraintTop_toBottomOf="@+id/promotionSize"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>