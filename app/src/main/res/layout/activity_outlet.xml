<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintBottom_toTopOf="@+id/mapGuideline"
            />

    <ImageView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_compass"
        android:padding="5dp"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/map"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/mapGuideline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".30"
                />


    <ScrollView
        android:id="@+id/detailCardViewScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/mapGuideline"
        app:layout_constraintBottom_toTopOf="@+id/btnOk">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/popStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:background="@color/white"
                android:clipToPadding="false"
                android:visibility="gone"
                app:cardCornerRadius="0dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toBottomOf="@+id/detailCardView"
                app:contentPadding="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="5dp"
                        android:text="@string/pop_status"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/pop_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/spinner_dropdown"
                        android:clipToPadding="false"
                        android:entries="@array/pop_array"
                        android:overlapAnchor="false"
                        android:paddingEnd="40dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/detailCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="5dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/name"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/address"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvName"

                        />


                    <TextView
                        android:id="@+id/channel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/channel"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvAddress" />

                    <TextView
                        android:id="@+id/visits"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Number of Asset: "
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/channel" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Eat Drink Food Point  "
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/barrier3"
                        app:layout_constraintTop_toTopOf="@+id/name" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Ground floor, shop #12"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/barrier3"
                        app:layout_constraintTop_toTopOf="@+id/address" />


                    <TextView
                        android:id="@+id/tvChannel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Channel name"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/barrier3"
                        app:layout_constraintTop_toTopOf="@+id/channel" />


                    <TextView
                        android:id="@+id/tvTotalVisit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/barrier3"
                        app:layout_constraintTop_toTopOf="@+id/visits" />


                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrier3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="right"
                        app:constraint_referenced_ids="name,visits"
                        tools:layout_editor_absoluteX="123dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mtdSaleOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/popStatus">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/mtdSale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MTD Sales"
                        android:padding="5dp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/monthlySales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Month to Date Sales: "
                        android:padding="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/mtdSale"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/monthlySalesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Available"
                        android:padding="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/mtdSale"
                        app:layout_constraintLeft_toRightOf="@+id/monthlySales"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/lastOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/mtdSaleOrder">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/lastOrderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Order"
                        android:padding="5dp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/lastOrderPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS. Not available"
                        android:paddingHorizontal="5dp"
                        android:paddingBottom="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/lastOrderText"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/lastOrderQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity: "
                        android:paddingHorizontal="5dp"
                        android:paddingBottom="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/lastOrderPrice"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/lastOrderQuantityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not available"
                        android:paddingHorizontal="5dp"
                        android:paddingBottom="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/lastOrderPrice"
                        app:layout_constraintLeft_toRightOf="@+id/lastOrderQuantity"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/lastOrderTaken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Taken on: "
                        android:paddingHorizontal="5dp"
                        android:paddingBottom="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/lastOrderQuantity"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/lastOrderTakenDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not available"
                        android:paddingHorizontal="5dp"
                        android:paddingBottom="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/lastOrderQuantity"
                        app:layout_constraintLeft_toRightOf="@+id/lastOrderTaken"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/promotions"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/lastOrder"
                app:layout_constraintVertical_bias="0">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnTasks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:text="@string/tasks"
                    android:textSize="20sp"
                    android:theme="@style/PositiveButton"
                    android:visibility="visible"
                    app:layout_constraintEnd_toStartOf="@+id/guide"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPromotions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginEnd="2dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:text="@string/promotions"
                    android:textSize="20sp"
                    android:theme="@style/PositiveButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guide"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="206dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
    <!--            </LinearLayout>-->



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:text="START FLOW"
        android:textSize="16sp"
        android:padding="10dp"
        android:theme="@style/PositiveButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNotFlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="CAN'T START FLOW"
        android:textSize="16sp"
        android:theme="@style/PositiveButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>