<?xml version="1.0" encoding="utf-8"?>
<com.optimus.eds.ui.route.outlet.tasks.TasksListItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="40"
    android:padding="10dp"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/task"
        android:layout_width="0dp"
        android:layout_weight="13.5"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:text="Any other issue (explain in remarks)"
        android:textSize="13sp"
        android:paddingEnd="5dp"
        />

    <TextView
        android:id="@+id/task_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="10-3-2020"
        android:textColor="@color/black"
        android:textSize="13sp"
       android:layout_weight="8"
        />
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/task_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:button="@drawable/checkbox"
        android:checked="false"
        android:text="Completed"
        android:layout_weight="11" />
    <TextView
        android:id="@+id/completed_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="8-3-2020"
        android:layout_weight="8.5"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:gravity="center"
        android:visibility="gone"
         />


</com.optimus.eds.ui.route.outlet.tasks.TasksListItemView>
