<?xml version="1.0" encoding="utf-8"?>
<com.optimus.eds.ui.route.outlet.OutletListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/outletView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp"
    >

    <View
        android:id="@+id/noSaleView"
        android:layout_width="12dp"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/outletName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:text="Rayan Decoration"
        android:maxLines="2"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        />

    <TextView
        android:id="@+id/outletCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/outletName"
        app:layout_constraintTop_toBottomOf="@id/outletName"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="@string/outlet_code"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_light"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/orderAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/outletName"
        app:layout_constraintTop_toBottomOf="@id/outletCode"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="RS. 0.0"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_light"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/noSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/outletName"
        app:layout_constraintTop_toBottomOf="@id/orderAmount"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="NO SALE"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_light"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outletCode"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="Store check/order"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_light"
        android:ellipsize="end"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
         />

    <ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/noSale"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_giftbox"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/noSale"
        app:layout_constraintLeft_toRightOf="@+id/star"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/pepsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pepsi"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/noSale"
        app:layout_constraintLeft_toRightOf="@+id/gift"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</com.optimus.eds.ui.route.outlet.OutletListItemView>